        <span class="legend" id="alaskan"></span>
        <span class="legend-text" id="alaskan">Alaskan / </span><br>Pacific Islander<br>
        <input type="checkbox" id="select-asian" name="asian" value="asian" checked />
        <span class="legend" id="asian"></span>
        <span class="legend-text" id="asian">Asian</span><br>
        <input type="checkbox" id="select-black" name="black" value="black" checked />
        <span class="legend" id="black"></span>
        <span class="legend-text" id="black">Black</span><br>
        <input type="checkbox" id="select-hispanic" name="hispanic and/or latin" value="hispanic" />
        <span class="legend" id="hispanic"></span>
        <span class="legend-text" id="hispanic">Hispanic / Latin</span><br>
        <input type="checkbox" id="select-white" name="white" value="white" />
        <span class="legend" id="white"></span>
        <span class="legend-text" id="white">White</span><br>
        <input type="submit" value="Enter" />
      </form>
      <button class="weight" id="shots-weight">Shots</button>
      <form class="weight-form shots-form" id="shots-weight-form">
        <label for="shots-min">Shots Min:</label>
        <input type="text" id="shots-min" name="shots-min" value="20" /><br>
        <label for="shots-max">Shots Max:</label>
        <input type="text" id="shots-max" name="shots-max" />
        <input type="submit" value="Enter" />
      </form>
      <button class="weight" id="illness-weight">Mental Illness</button>
      <form class="weight-form illness-form" id="illness-weight-form">
        <input type="checkbox" id="select-ill" name="ill" value="ill" checked />
        <span class="legend" id="ill"></span>
        <span class="legend-text" id="ill">Yes</span><br>
        <input type="checkbox" id="select-not-ill" name="not-ill" value="not-ill" />
        <span class="legend" id="not-ill"></span>
        <span class="legend-text" id="not-ill">No</span><br>
        <input type="submit" value="Enter" />
      </form>
      <button class="weight" id="unarmed-weight">
        Unarmed</button>
      <form class="weight-form unarmed-form" id="unarmed-weight-form">
        <input type="checkbox" id="select-unarmed" name="unarmed" value="unarmed" checked />
        <span class="legend" id="unarmed"></span>
        <span class="legend-text" id="unarmed">Unarmed</span><br>
        <input type="checkbox" id="select-armed" name="armed" value="armed" />
        <span class="legend" id="armed"></span>
        <span class="legend-text" id="armed">Armed</span><br>
        <input type="submit" value="Enter" />
      </form>

      <div class="graph-legend-container"></div>

    </div>

  </div>

</div>

